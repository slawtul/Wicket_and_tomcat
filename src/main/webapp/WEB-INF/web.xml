<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

    <description>Simple tomcat app + wickets</description>
    <display-name>Simple tomcat app + wickets</display-name>

    <request-character-encoding>UTF-8</request-character-encoding>

    <filter>
        <filter-name>WicketExamples</filter-name>
        <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
        <init-param>
            <param-name>applicationClassName</param-name>
            <param-value>org.javablues.tomcat_and_wicket.WicketInit</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>WicketExamples</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
